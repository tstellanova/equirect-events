// Defines compact FlatBuffer types for Event Cameras

namespace EventCam;

enum Polarity:byte { Falling = 0, Rising = 1, Bogus = 2}

struct Event {
    x: uint16;
    y: uint16;
    polarity:Polarity;
}

table FrameData {
    events: [Event];
    rising_count: uint32;
    falling_count: uint32;
}

